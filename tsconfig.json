{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"incremental": true,
		"isolatedModules": true,
		"sourceMap": true,
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "./out/node_modules",
		"strict": true,
		"noImplicitAny": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}